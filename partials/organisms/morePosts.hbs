{{#get "posts" filter="primary_tag:{{primary_tag.slug}}+id:-{{id}}" include="authors,tags" limit="3" as |more_posts|}}
    {{#if more_posts}}
        <aside class="l-grid mt-8">
            <h3 class="">You might also be interested in...</h3>
            <div class="post-feed post-feed--horizontal mt-4">
                {{#foreach more_posts}}
                    {{> "molecules/postCard" horizontal=true hide_media=true hide_excerpt=true}}
                {{/foreach}}
            </div>
        </aside>
    {{/if}}
{{/get}}