{
    "name": "simple-code",
    "description": "A custom theme for ghost",
    "demo": "https://blog.andreaskrahl.de",
    "version": "1.2.0",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "build": "gulp build --production",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "yarn lint && yarn test:ci",
        "lint": "gulp lint",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Andreas Krahl",
        "email": "a.krahl90@gmail.com",
        "url": "https://blog.andreaskrahl.de"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:radikrahl/simple-code.git"
    },
    "bugs": "https://github.com/radikrahl/simple-code/issues",
    "contributors": "https://github.com/radikrahl/simple-code/graphs/contributors",
    "devDependencies": {
        "@babel/core": "7.22.5",
        "@babel/plugin-transform-runtime": "7.22.5",
        "@babel/preset-env": "7.22.5",
        "babelify": "10.0.0",
        "autoprefixer": "10.4.14",
        "beeper": "2.1.0",
        "browserify": "17.0.0",
        "cssnano": "6.0.1",
        "eslint": "8.42.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-prettier": "4.2.1",
        "gscan": "4.37.0",
        "gulp": "4.0.2",
        "gulp-browserify": "0.5.1",
        "gulp-concat": "2.6.1",
        "gulp-eslint": "6.0.0",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-rename": "2.0.0",
        "gulp-sass": "5.1.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "highlight.js": "11.8.0",
        "jquery": "3.7.0",
        "merge-stream": "2.0.0",
        "node-sass": "9.0.0",
        "postcss": "8.4.24",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "4.0.0",
        "postcss-reporter": "7.0.5",
        "postcss-scss": "4.0.6",
        "prettier": "2.8.8",
        "stylelint": "15.7.0",
        "stylelint-config-prettier": "9.0.5",
        "stylelint-prettier": "3.0.0",
        "vinyl-buffer": "1.0.1",
        "vinyl-source-stream": "2.0.0",
        "tailwindcss": "3.3.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "6.4.0"
    }
}
